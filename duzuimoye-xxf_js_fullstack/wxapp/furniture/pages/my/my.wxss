.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
.userinfo-nickname {
    color: #aaa;
  }
.list .item{
    padding:20px 15px;
    font-size: 14px;
    color:#333;
    position: relative;
    border-bottom: 1px solid #f3f3f3;
  }
  .list .item:last-child{
    border:none;
  }
  .list .item image {
    width:16px;
    height: 16px;
    display: inline-block;
    vertical-align:middle;
    margin-right:5px;
  }
  .list .item .jump{
    position: absolute;
    right:20px;
    color:#999;
  }